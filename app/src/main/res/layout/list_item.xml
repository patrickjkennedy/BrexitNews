<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_linear_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sectionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="12sp"
            tools:text="Business | Opinion" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sectionType"
            android:paddingTop="8dp"
            android:paddingLeft="16dp"
            android:textColor="#000"
            android:textSize="18sp"
            tools:text="UK firms say 'the hard work on Brexit starts now' - as it happened" />

        <TextView
            android:id="@+id/pubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="12sp"
            tools:text="Published: 08/12/2017 16:51pm" />
    </RelativeLayout>

</LinearLayout>